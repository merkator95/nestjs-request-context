  "devDependencies": {
    "@nestjs/common": "^10.0.5",
    "@nestjs/core": "^10.0.5",
    "@nestjs/platform-express": "^10.0.5",
    "prettier": "^2.8.8",
    "reflect-metadata": "^0.1.13",
    "@types/node": "^20.3.3",
    "rxjs": "^7.8.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.1.6",
    "version-bump-prompt": "^6.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abonifacio/nestjs-request-context.git"
